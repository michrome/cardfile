<%= form_for card, html: { class: 'pure-form' } do |f| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="pure-group">
    <%= f.text_field :title,
      class: 'pure-input-1 title',
      placeholder: 'Title',
      autofocus: card.new_record? %>
  </fieldset>
  <fieldset class="pure-group">
    <%= f.text_area :body,
      rows: 20,
      class: 'pure-input-1',
      placeholder: 'Body',
      autofocus: !(card.new_record?) %>
    <div id="body_for_print">
      <%= simple_format f.object.body %>
    </div>
  </fieldset>
  <div class="margin-hanger">
    <div>
      <%= f.submit 'Save', class: 'pure-button pure-button-primary' %>
      <a href="javascript:history.back()" class="pure-button">Cancel</a>
    </div>
    <% unless card.new_record? %>
      <div>
        <%= link_to 'Delete', card, method: :delete, data: { confirm: 'Are you sure?' }, class: 'pure-button warning' %>
      </div>
    <% end %>
  <% end %>
