<%= form_for card, html: { class: 'pure-form' } do |f| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="pure-group">
    <%= f.text_field :title,
      class: 'pure-input-1',
      placeholder: 'Title',
      autofocus: f.object.new_record? %>
  </fieldset>
  <fieldset class="pure-group">
    <%= f.text_area :body,
      rows: 20,
      class: 'pure-input-1',
      placeholder: 'Body',
      autofocus: !(f.object.new_record?) %>
  </fieldset>
  <%= f.submit 'Save', class: 'pure-button pure-button-primary' %>
  <a href="javascript:history.back()" class="pure-button">Cancel</a>
<% end %>
